# Example .env file for MCP Data Analyst
# Copy this file to .env and fill in your values

# ===================
# LLM Configuration
# ===================

# Your LLM API key (OpenAI or compatible)
LLM_API_KEY=sk-your-api-key-here

# The model to use for query generation
LLM_MODEL=gpt-3.5-turbo

# API endpoint URL
LLM_API_URL=https://api.openai.com/v1

# ===================
# Database Configuration
# ===================

# Database type: mysql, postgresql, mssql, mongodb, or sqlite
DB_TYPE=mysql

# Database connection details
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-password-here
DB_NAME=your-database-name

# ===================
# PostgreSQL Example
# ===================
# Uncomment and modify if using PostgreSQL:
# DB_TYPE=postgresql
# DB_PORT=5432
# DB_USER=postgres

# ===================
# MSSQL Example
# ===================
# Uncomment and modify if using Microsoft SQL Server:
# DB_TYPE=mssql
# DB_PORT=1433
# DB_USER=sa

# ===================
# MongoDB Example
# ===================
# Uncomment and modify if using MongoDB:
# DB_TYPE=mongodb
# DB_PORT=27017
# DB_USER=admin
# # Leave blank for no authentication
# DB_USER=
# DB_PASSWORD=
